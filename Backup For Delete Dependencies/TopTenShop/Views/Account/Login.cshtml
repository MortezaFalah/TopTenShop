@model LoginViewModel
@{
    ViewData["Title"] = "ورود به سایت";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page">ورود به سایت</li>
        </ul>
    </nav>
</div>


<main class="client-page">
    <div class="container-content">
        @if (ViewBag.IsSuccess == true)
        {
          <div class="alert alert-success">
              <p class="help-block">ورود با موفقیت انجام شد</p>
          </div>


            <script>
                var delay = 3000;
                setTimeout(function () { window.location = "https://localhost:7022/Home/Index"; }, delay);
            </script>
        }
        <header><h2> ورود به سایت </h2></header>

        <div class="form-layer">

            <form action="Login" method="post">

                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input asp-for="Email" type="text" class="form-control" placeholder="ایمیل یا نام کاربری" aria-describedby="email-address">
                </div>

                <div class="input-group">
                    <span class="input-group-addon" id="Password"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور " aria-describedby="password">
                </div>

                <div class="remember-me">
                    <label><input asp-for="RememberMe" type="checkbox" name="">  مرا بخاطر بسپار </label>
                </div>

                <div class="link">
                    <a href=""> <i class="zmdi zmdi-lock"></i> رمز عبور خود را فراموش کرده ام !</a>
                    <a asp-action="Register" asp-controller="Account"> <i class="zmdi zmdi-account"></i> عضویت در سایت </a>
                </div>

                <div asp-validation-summary="All" class="text-danger">
                </div>
                <button class="btn btn-success"> ورود به سایت </button>

            </form>
        </div>

    </div>
</main>

